	<br>
	<label for="last_name">Last Name</label>
	<input type="text" name="last_name" value=<%= @my_profile.last_name %>>
	<br>
	<label for="birthday">Birthday</label>
	<input type="text" name="birthday" value=<%= @my_profile.birthday %>>
	<br>
	<label for="email">Email</label>
	<input type="text" name="email" value=<%= @my_profile.email %>>
